@model AuthServer.Models.RegisterViewModel
@{
    ViewData["Title"] = "Реєстрація";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 500px; border-radius: 12px;">
        <div class="text-center mb-4">
            <h3 class="fw-bold text-dark">Створення акаунту</h3>
            <p class="text-muted mb-0">Заповніть форму для створення нового облікового запису</p>
        </div>

        <form asp-action="Register" method="post" novalidate>
            <input type="hidden" asp-for="ReturnUrl" />

            <div class="mb-3">
                <label asp-for="Username" class="form-label fw-semibold"></label>
                <input asp-for="Username" class="form-control form-control-lg" placeholder="Введіть логін" />
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FullName" class="form-label fw-semibold"></label>
                <input asp-for="FullName" class="form-control form-control-lg" placeholder="Ваше повне ім’я" />
                <span asp-validation-for="FullName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold"></label>
                <input asp-for="Email" type="email" class="form-control form-control-lg" placeholder="example@gmail.com" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Phone" class="form-label fw-semibold"></label>
                <input asp-for="Phone" type="tel" class="form-control form-control-lg" placeholder="+380XXXXXXXXX" />
                <span asp-validation-for="Phone" class="text-danger small"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Password" class="form-label fw-semibold"></label>
                    <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Введіть пароль" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="ConfirmPassword" class="form-label fw-semibold"></label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" placeholder="Підтвердіть пароль" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>
            </div>

            <div class="mb-4">
                <label asp-for="SelectedRole" class="form-label fw-semibold">Роль користувача</label>
                <select asp-for="SelectedRole" class="form-select form-select-lg">
                    <option value="Student">Студент</option>
                    <option value="Professor">Викладач</option>
                </select>
                <span asp-validation-for="SelectedRole" class="text-danger small"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-success btn-lg rounded-3 shadow-sm">
                    <i class="bi bi-person-plus-fill me-1"></i> Зареєструватися
                </button>
            </div>
        </form>

        <div class="text-center mt-4">
            <p class="mb-0 text-muted">Вже маєте акаунт?</p>
            <a asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl"
               class="btn btn-outline-secondary mt-2">
                Увійти
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
